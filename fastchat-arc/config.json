{
  "name": "FastChat Intel GPU (DockerHub)",
  "version": "1.0.0",
  "slug": "fastchat_arc_dockerhub",
  "description": "FastChat with OpenAI-compatible API using Intel Arc/Xe GPUs (external image)",
  "arch": ["amd64"],
  "startup": "services",
  "boot": "auto",
  "image": "ghcr.io/martinwierenga/fastchat-intel-gpu:latest",
  "options": {
    "model_path": "/share/models/vicuna-7b",
    "max_gpu_memory": "14Gib",
    "log_level": "info",
    "log_path": "/share/fastchat/logs"
  },
  "schema": {
    "model_path": "str?",
    "max_gpu_memory": "str?",
    "log_level": "str?",
    "log_path": "str?"
  },
  "ports": {
    "7860/tcp": 7860,
    "8000/tcp": 8000
  },
  "devices": ["/dev/dri"],
  "map": [
    "config:rw",
    "share:rw"
  ],
  "webui": "http://[HOST]:[PORT:7860]",
  "ingress": false,
  "environment": {
    "PYTHONUNBUFFERED": "1"
  }
}
